<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">

    <TextView
        android:id="@+id/fragment_ioudata_item_tablename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        android:textSize="15sp"
        android:text="台名"/>

    <ImageView
        android:id="@+id/fragment_ioudata_item_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/money"/>
    <TextView
        android:id="@+id/fragment_ioudata_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/fragment_ioudata_item_img"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:text="0.00"/>

    <ImageView
        android:id="@+id/fragment_ioudata_item_reduceimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/delete_items"/>

</RelativeLayout>