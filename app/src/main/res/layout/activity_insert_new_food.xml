<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/blueblue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:textColor="@color/whitesmoke"
            android:text="新增菜式"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom">
            <TextView
                android:id="@+id/activity_insert_food_nametext"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="菜名: "/>
            <EditText
                android:id="@+id/activity_insert_food_name"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:padding="10px"
                android:background="@drawable/edittext_stroke"
                android:textSize="15sp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom">
            <TextView
                android:id="@+id/activity_insert_food_pricetext"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="￥ : "/>
            <EditText
                android:id="@+id/activity_insert_food_price"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:padding="10px"
                android:phoneNumber="true"
                android:background="@drawable/edittext_stroke"
                android:textSize="15sp"/>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/activity_insert_food_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/blueblue"
        android:textSize="15sp"
        android:textColor="@color/whitesmoke"
        android:text="确定"/>
</LinearLayout>
