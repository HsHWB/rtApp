<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blueblue">
        <ImageView
            android:id="@+id/fragment_empty_table_showmenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/fragment_empty_table_fragmentempty"
                android:layout_width="60sp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:background="@drawable/head_left_button"/>
            <Button
                android:id="@+id/fragment_empty_table_fragmentnoted"
                android:layout_width="60sp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:background="@drawable/head_right_button"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>