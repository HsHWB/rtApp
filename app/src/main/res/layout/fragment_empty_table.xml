<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    tools:context="com.example.sliding.mainview.View.Fragment.EmptyTableFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whitesmoke">
        <ImageView
            android:id="@+id/fragment_empty_table_showmenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/fragment_empty_table_fragmentempty"
                android:layout_width="60sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/fragment_empty_table_fragment"
                android:layout_width="60sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
    <com.dy.pull2refresh.view.Pull2RefreshListView
        android:id="@+id/fragment_empty_table_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
