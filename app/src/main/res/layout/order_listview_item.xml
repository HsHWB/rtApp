<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/order_listview_item_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_listview_item_tvNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/empty_table_item_num_tv"
            android:textSize="15sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/order_listview_item_liner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/order_listview_ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/order_listview_item_reducebutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/reducebutton"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/order_listview_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true">
            <EditText
                android:id="@+id/order_listview_item_edittext"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/order_listview_ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/order_listview_item_addbutton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/addbutton"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/order_listview_item_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_listview_item_linear1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_listview_item_tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/empty_table_item_num_tv"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_listview_item_tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_table_item_id_tv"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
